{{#partial "content"}}

    <div class="card bg-warning">
        <h2 class="card-title">Hero list!    </h2>

        {{#if posts}}
            {{#each posts }}
                <p>{{ content }}  <a href="/posts/{{id}}">read more...</a></p>
            {{/each}}
        {{else}}
            <p class="alert alert-warning text-center">No heroes found!</p> <br> <a class="mt-2 text-center" href="/posts/new">  Create hero here</a>
        {{/if}}
    </div>
{{/partial}}

