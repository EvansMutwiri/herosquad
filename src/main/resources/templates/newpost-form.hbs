{{#partial "content"}}
    {{#if editHero}}
        <h1>Edit this Hero!</h1>
        <form action="/posts/{{editHero.id}}/update" method="post">
            <label for="content">Edit this hero</label>
            <input class="form-control" id="content" name="content" type="text" value="{{editHero.content}}" required>
            <button type="submit" class="btn btn-secondary">Go!</button>
        </form>

    {{else}}
            <h2>Add a new Hero!</h2>

            <div class="modal-dialog modal-dialog-centered">
                ...
            </div>

        <form action="/posts/new" method="post">
            <div class="mb-3">
                <label for="content">Hero name</label>
                <input class="form-control" id="content" name="content" type="text" required>
            </div>

                <div class="mb-3">
                    <label for="power">Hero power</label>
                    <input class="form-control" id="power" name="power" type="text" placeholder="eg. time travel" required>
                </div>

                <div class="mb-3">
                    <label for="weak">Hero weakness</label>
                    <input class="form-control" id="weak" name="weak" type="text" placeholder="eg. fire" required>
                </div>

            <div class="md-3">
                <label for="age">Hero Age</label>
                <input class="form-control" id="age" name="age" type="number" required>
            </div>
            <button type="submit" class="btn btn-secondary">Go!</button>

    {{/if}}
        </form>
{{/partial}}



{{> layout.hbs}}