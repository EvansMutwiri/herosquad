{{#partial "content"}}
    {{#if editHero}}
        <h1>Edit this Hero!</h1>
        <form action="/posts/{{editHero.id}}/update" method="post">
            <label for="content">Edit this hero</label>
            <input id="content" name="content" type="text" value="{{editHero.content}}">
            <button type="submit" class="btn btn-secondary">Go!</button>

        </form>

    {{else}}
            <h1>Add a new Hero!</h1>

        <form action="/posts/new" method="post">
            <label for="content">Hero name</label>
            <input id="content" name="content" type="text">

            <button type="submit" class="btn btn-secondary">Go!</button>

    {{/if}}
        </form>
{{/partial}}



{{> layout.hbs}}