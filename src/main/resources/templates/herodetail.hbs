                <h5>Age:</h5>
                <p>{{post.age}}</p>
            </div>
            <div class="d-flex">
                <h5>Weakness:</h5>
                <p>{{post.weakness}}</p>
            </div>
        </div>

        <a href="/posts/{{post.id}}/update">Edit this hero</a>
