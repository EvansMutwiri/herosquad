{{#partial "details"}}
    <div class="cards__item card card">
        <div class="card-body">
            <div class="d-flex">
                <h5>Content:</h5>
                <p>{{post.name}}</p>
            </div>
            <div class="d-flex">
                <h5>Powers:</h5>
