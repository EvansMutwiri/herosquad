{{#partial "content"}}
    <p>Content:</p>
    <p>{{ post.content }}</p>
    <h5>Created At:</h5>
    <p> {{ post.createdAt }}</p>
    <h5>Post status:</h5>
    <p>
        {{#if post.published }}
            <span class="glyphicon glyphicon-star"></span>  Published
        {{else}}
            <i class="fas fa-space-shuttle"></i> Draft
        {{/if}}

        <a href="/posts/{{post.id}}/update">Edit this hero</a>
        <a class="btn btn-danger" href="/posts/{{post.id}}/delete">DELETE this post </a>
    </p>
{{/partial}}

{{> layout.hbs}}