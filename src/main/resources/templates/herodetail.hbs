{{#partial "details"}}
    <div class="cards__item card">
        <div class="card-body">
            <div class="d-flex">
                <h5>Content:</h5>
                <p>{{ post.content }}</p>
            </div>
            <div class="d-flex">
                <h5>Powers:</h5>
                <p>{{ post.power }}</p>
            </div>
            <div class="d-flex">
                <h5>Age:</h5>
                <p>{{ post.age }}</p>
            </div>
            <div class="d-flex">
                <h5>Weakness:</h5>
                <p>{{ post.weak }}</p>
            </div>
        </div>

        <a href="/posts/{{post.id}}/update">Edit this hero</a>
        <a class="btn btn-danger" href="/posts/{{post.id}}/delete">DELETE this post </a>
        </p>
    </div>
{{/partial}}

